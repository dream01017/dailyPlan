        <item name="colorSecondaryVariant">#247001</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- About -->
        <item name="aboutapp_title_color">#1C7B8E</item>
        <item name="aboutapp_text_color_title">#000000</item>
