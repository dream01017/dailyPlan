<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false"
    android:paddingStart="5sp"
    android:paddingEnd="5sp">

    <LinearLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/changeOnLeftSwipe"
            android:text="@string/toolbar_more_items_changeOnLeftSwipe"
            android:backgroundTint="#14DECD"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:minHeight="45sp"
            android:minWidth="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/changeOnClick"
            android:text="@string/toolbar_more_items_changeOnClick"
            android:backgroundTint="#14DECD"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:minHeight="45sp"
            android:minWidth="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>